generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native"]
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  role          String    @default("operator")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  orders        Order[]
  messages      Message[]
  files         VaultFile[]
  documents     Document[]
  transactions  Transaction[]
  aiChats       AiChat[]
  permissions   UserPermission[]
}

model Permission {
  id        String           @id @default(cuid())
  name      String           @unique
  createdAt DateTime         @default(now())
  users     UserPermission[]
}

model UserPermission {
  id           String     @id @default(cuid())
  userId       String
  permissionId String
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())

  @@unique([userId, permissionId])
}

model Order {
  id          String   @id @default(cuid())
  orderNumber String   @unique
  customer    String
  address     String
  phone       String
  items       String
  total       Float
  status      String   @default("pending")
  priority    String   @default("normal")
  courier     String?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  @@index([status])
  @@index([createdAt])
  @@index([userId, status])
}

model Message {
  id          String   @id @default(cuid())
  chatId      String
  chatName    String
  content     String
  sender      String
  isOutgoing  Boolean  @default(false)
  platform    String   @default("telegram")
  createdAt   DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  @@index([chatId])
  @@index([platform, createdAt])
  @@index([userId])
}

model VaultFile {
  id              String   @id @default(cuid())
  name            String
  type            String
  size            Int
  cloudStoragePath String
  isPublic        Boolean  @default(false)
  encrypted       Boolean  @default(true)
  folder          String   @default("root")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  userId          String
  user            User     @relation(fields: [userId], references: [id])
}

model Document {
  id          String   @id @default(cuid())
  title       String
  content     String
  category    String   @default("general")
  tags        String   @default("")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model Transaction {
  id          String   @id @default(cuid())
  type        String
  amount      Float
  currency    String   @default("DASH")
  address     String?
  txHash      String?
  status      String   @default("pending")
  description String?
  createdAt   DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model AiChat {
  id          String   @id @default(cuid())
  role        String
  content     String
  createdAt   DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}
